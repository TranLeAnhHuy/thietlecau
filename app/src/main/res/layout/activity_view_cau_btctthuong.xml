<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewCauBTCTThuong">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Chọn loại cầu thiết kế"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="italic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_I"
            android:layout_width="150dp"
            android:layout_marginLeft="5dp"
            android:layout_height="150dp"
            android:src="@drawable/pic_i"
             />

        <ImageView
            android:id="@+id/imv_T"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_height="150dp"
            android:src="@drawable/pic_t"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:padding="5dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_I"
            android:layout_width="180dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="Dầm I"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"


            />
        <TextView
            android:id="@+id/txt_T"
            android:layout_width="180dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Dầm T"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:weightSum="2"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_ban"
            android:layout_width="150dp"
            android:layout_marginLeft="5dp"
            android:layout_height="150dp"

            />

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_height="150dp"
            android:src="@drawable/pic_back"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:padding="5dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_ban"
            android:layout_width="180dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="Cầu Bản"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"


            />
        <TextView
            android:id="@+id/txt_back"
            android:layout_width="180dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Trở lại"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            />
    </LinearLayout>


</LinearLayout>